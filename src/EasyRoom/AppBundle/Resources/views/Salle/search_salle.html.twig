{% extends "EasyRoomAppBundle::template_parent.html.twig" %}

{# Contenu du block stylesheets #}
{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/easyroomapp/dist/css/search_salle.css') }}"/>
{% endblock %}

{# Contenu du block navbar #}
{% block navbar %}
    <div class="navbar-fixed">
        <ul id="dropdown1" class="dropdown-content">
            <li><a href="#!">Mon profil</a></li>
            <li class="divider"></li>
            <li><a href="{{ path('easy_room_app_login_index') }}">Se déconnecter</a></li>
        </ul>
        <nav class="white" role="navigation nav-wrapper">
            <div class="container">
                <a id="logo-container" href="{{ path('easy_room_app_accueil_index') }}" class="brand-logo"><img src="{{ asset('bundles/easyroomapp/dist/images/logo-menu.png') }}" alt="Logo Easyroom"></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="{{ path('easy_room_app_accueil_index') }}">Accueil</a></li>
                    <li class="active"><a href="{{ path('easy_room_app_salle_search') }}">Salles</a></li>
                    <li><a href="#">Mes réservations</a></li>
                    <!-- Dropdown Trigger -->
                    <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><i class="material-icons">person_pin</i></a></li>
                </ul>

                <ul id="nav-mobile" class="side-nav">
                    <li><a href="{{ path('easy_room_app_accueil_index') }}">Accueil</a></li>
                    <li class="active"><a href="{{ path('easy_room_app_salle_search') }}}">Salles</a></li>
                    <li><a href="#">Mes réservations</a></li>
                    <li><a href="#!">Mon profil</a></li>
                    <li class="divider"></li>
                    <li><a href="{{ path('easy_room_app_login_index') }}">Se déconnecter</a></li>
                </ul>
                <a href="#" data-activates="nav-mobile" class="blue-text button-collapse"><i class="material-icons">menu</i></a>
            </div>
        </nav>
    </div>
{% endblock %}

{# Contenu du block navbar #}
{% block main %}
    <section class="row recherche valign-wrapper">
        <div class="container">
            {% include 'EasyRoomAppBundle:Salle:form_recherche.html.twig' %}
        </div>
    </section>

    <section class="section row resultats-recherche">
        <div class="container">
            <h3 class="col s12 header center-align">Résultats de votre recherche</h3>
            {% include 'EasyRoomAppBundle:Salle:carte_resultat.html.twig' %}
        </div>
    </section>
{% endblock %}

{# Contenu du block navbar #}
{% block javascript %}
    <script src="{{ asset('bundles/easyroomapp/dist/js/materialize.clockpicker.js') }}"></script>
    <script src="{{ asset('bundles/easyroomapp/dist/js/recherche_salle.js') }}"></script>
{% endblock %}
