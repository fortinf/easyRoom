<form class="col s12" style="padding: 0.1rem 2.75rem" action="{{ path('easy_room_app_salle_search') }}">
  <div class="row">
    <h3>Réservez une salle</h3>
    <div class="input-field col m2">
      <input id="effectif" type="number" class="validate">
      <label for="effectif">Effectif</label>
    </div>
    <div class="input-field col m3">
      <input id="date_debut" type="date" class="datepicker">
      <label for="date_debut">Date début</label>
    </div>
    <div class="input-field col m2">
      <input id="heure_debut" type="time" class="timepicker">
      <label for="heure_debut">Heure début</label>
    </div>
    <div class="input-field col m3">
      <input id="date_fin" type="date" class="datepicker">
      <label for="date_fin">Date fin</label>
    </div>
    <div class="input-field col m2">
      <input id="heure_fin" type="time" class="timepicker">
      <label for="heure_fin">Heure fin</label>
    </div>
    <div class="submit col s12 center-align">
      <button class="btn waves-effect waves-light" type="submit" name="action">Rechercher</button>
    </div>
  </div>
</form>
