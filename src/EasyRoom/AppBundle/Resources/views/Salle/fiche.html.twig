{% extends "EasyRoomAppBundle::template_parent.html.twig" %}

{# Contenu du block stylesheets #}
{% block stylesheets %}
	<link type="text/css" rel="stylesheet" href="{{ asset('bundles/easyroomapp/dist/css/detail_salle.css') }}"/>
{% endblock %}

{# Contenu du block navbar #}
{% block main %}

	<div class="row" id="photo-salle"></div>

	<section class="row description-resa container">
		<div class="col s8 description">
			<h4>Salle Hipster</h4>
			<p>10 max.</p>
			<p class="summary">Salle cool et détendue pour des réunions en toute convivialité. La salle est équipée d'un rétroprojecteur et de 2 tableaux blancs.</p>
		</div>
		<div class="col s4 reservation">
			<h5>Réservation</h5>
			<form class="card" action="#">
				<div class="input-field">
					<input id="effectif" type="number" class="validate">
					<label for="effectif">Effectif</label>
				</div>
				<div class="row debut">
					<div class="input-field col s6">
						<input id="date_debut" type="date" class="datepicker">
						<label for="date_debut">Date début</label>
					</div>
					<div class="input-field col s6">
						<label for="heure_debut">Heure début</label>
						<input id="heure_debut" class="timepicker" type="time">
					</div>
				</div>
				<div class="row">
					<div class="input-field col s6">
						<input id="date_fin" type="date" class="datepicker">
						<label for="date_fin">Date fin</label>
					</div>
					<div class="input-field col s6">
						<label for="heure_fin">Heure fin</label>
						<input id="heure_fin" class="timepicker" type="time">
					</div>
				</div>
				<div class="submit center-align">
					<button class="btn waves-effect waves-light" type="submit" name="action">Réserver</button>
				</div>
			</form>
		</div>
	</section>

	<section class="capacites-caracteristiques row container">
        <div class="col s6 capacites">
            <h5>Capacités</h5>
            <ul>
                <li>Table rectangulaire : <span class="bold">20</span></li><br/>
                <li>Salle de classe : <span class="bold">20</span></li><br/>
                <li>Conférence : <span class="bold">20</span></li><br/>
                <li>Vide : <span class="bold">20</span></li>
            </ul>
        </div>
        <div class="col s6 caracteristiques">
            <h5>Caractéristiques</h5>
            <ul>
                <li><i class="material-icons">accessible</i> Accessible</li><br/>
                <li><i class="material-icons">wb_sunny</i> Ensoleillé</li><br/>
            </ul>
        </div>
    </section>
    <section class="equipement row container">
        <h5>Équipement</h5>
        <ul>
            <li><i class="material-icons">music_note</i> Chaîne Hi-Fi</li>
        </ul>
    </section>


{% endblock %}

{# Contenu du block navbar #}
{% block javascript %}
	<script src="{{ asset('bundles/easyroomapp/dist/js/materialize.clockpicker.js') }}"></script>
	<script src="{{ asset('bundles/easyroomapp/dist/js/detail_salle.js') }}"></script>
{% endblock %}
