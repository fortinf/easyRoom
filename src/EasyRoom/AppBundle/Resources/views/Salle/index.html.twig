{% extends "EasyRoomAppBundle::template_parent.html.twig" %}

{# Contenu du block stylesheets #}
{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/easyroomapp/dist/css/detail_salle.css') }}"/>
{% endblock %}

{# Contenu du block navbar #}
{% block navbar %}
    <div class="navbar-fixed">
        <ul id="dropdown1" class="dropdown-content">
            <li><a href="#!">Mon profil</a></li>
            <li class="divider"></li>
            <li><a href="{{ path('easy_room_app_login_index') }}">Se déconnecter</a></li>
        </ul>
        <nav class="white" role="navigation nav-wrapper">
            <div class="container">
                <a id="logo-container" href="{{ path('easy_room_app_accueil_index') }}" class="brand-logo"><img src="{{ asset('bundles/easyroomapp/dist/images/logo-menu.png') }}" alt="Logo Easyroom"></a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="{{ path('easy_room_app_accueil_index') }}">Accueil</a></li>
                    <li class="active"><a href="{{ path('easy_room_app_salle_search') }}">Salles</a></li>
                    <li><a href="#">Mes réservations</a></li>
                    <!-- Dropdown Trigger -->
                    <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><i class="material-icons">person_pin</i></a></li>
                </ul>

                <ul id="nav-mobile" class="side-nav">
                    <li><a href="{{ path('easy_room_app_accueil_index') }}">Accueil</a></li>
                    <li class="active"><a href="{{ path('easy_room_app_salle_search') }}">Salles</a></li>
                    <li><a href="#">Mes réservations</a></li>
                    <li><a href="#!">Mon profil</a></li>
                    <li class="divider"></li>
                    <li><a href="{{ path('easy_room_app_login_index') }}">Se déconnecter</a></li>
                </ul>
                <a href="#" data-activates="nav-mobile" class="blue-text button-collapse"><i class="material-icons">menu</i></a>
            </div>
        </nav>
    </div>
{% endblock %}

{# Contenu du block navbar #}
{% block main %}

    <div class="row" id="photo-salle"></div>

    <section class="row description-resa container">
        <div class="col s8 description">
            <h4>Salle Hipster</h4>
            <p>10 max.</p>
            <p class="summary">Salle cool et détendue pour des réunions en toute convivialité. La salle est équipée d'un rétroprojecteur et de 2 tableaux blancs.</p>
        </div>
        <div class="col s4 reservation">
            <h5>Réservation</h5>
            <form class="card" action="#">
                <div class="input-field">
                    <input id="effectif" type="number" class="validate">
                    <label for="effectif">Effectif</label>
                </div>
                <div class="row debut">
                    <div class="input-field col s6">
                        <input id="date_debut" type="date" class="datepicker">
                        <label for="date_debut">Date début</label>
                    </div>
                    <div class="input-field col s6">
                        <label for="heure_debut">Heure début</label>
                        <input id="heure_debut" class="timepicker" type="time">
                    </div>
                </div>
                <div class="row">
                <div class="input-field col s6">
                    <input id="date_fin" type="date" class="datepicker">
                    <label for="date_fin">Date fin</label>
                </div>
                <div class="input-field col s6">
                    <label for="heure_fin">Heure fin</label>
                    <input id="heure_fin" class="timepicker" type="time">
                </div>
                </div>
                <div class="submit center-align">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Réserver</button>
                </div>
            </form>
        </div>
    </section>

    <section class="capacites-caracteristiques"></section>
    <section></section>


{% endblock %}

{# Contenu du block navbar #}
{% block javascript %}
    <script src="{{ asset('bundles/easyroomapp/dist/js/materialize.clockpicker.js') }}"></script>
    <script src="{{ asset('bundles/easyroomapp/dist/js/detail_salle.js') }}"></script>
{% endblock %}
