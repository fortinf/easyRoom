{% endblock %}
{% block main %} {#
(Contenu obligatoire) ici doit être ajouté le contenu de l'écran #}
<section id="salle-section-description" class="valign-wrapper">
	<div class="valign white lighten-1 container"
		id="salle-div-description">
		<div class="row">
			<div class="col s12">
				<h4>Créer une salle</h4>
			</div>
			<div class="input-field col s12">
				<div class="input-field col s6">
					<div class="input-field col s12">
						<input id="nom-salle" type="text" class="validate"> <label
							for="nom-salle">Nom de la salle</label>
					</div>
					<div class="input-field col s12">
						<textarea id="description-salle" class="materialize-textarea"
							data-length="120"></textarea>
						<label for="description-salle">Description</label>
					</div>
				</div>
				<div class="input-field col s6">
					<img class="materialboxed" width="300"
						src="{{ asset('bundles/easyroomapp/dist/images/card_salle_manathan.jpg') }}"></img>
					<a class="btn-floating blue"><i class="material-icons">attach_file</i></a>
				</div>
			</div>
			<h5>Capacité</h5>
			<form action="#">
				<p>
				<div class="input-field col s6">
					<input name="disposition" type="radio" id="disposition-rectangle" />
					<label for="disposition-rectangle">Disposition Rectangle</label>
				</div>
				<div class="input-field col s3">
					<input id="effectif-rectangle" type="number" class="validate"
						min="0" max="500"> <label for="effectif-rectangle">Effectif</label>
				</div>
				</p>
				<p>
				<div class="input-field col s6">
					<input name="disposition" type="radio" id="disposition-salle" /> <label
						for="disposition-salle">Disposition Salle de classe</label>
				</div>
				<div class="input-field col s3">
					<input id="effectif-salle" type="number" class="validate" min="0"
						max="500"> <label for="effectif-salle">Effectif</label>
				</div>
				</p>
				<p>
				<div class="input-field col s6">
					<input name="disposition" type="radio" id="disposition-conference" />
					<label for="disposition-conference">Disposition Conférence</label>
				</div>
				<div class="input-field col s3">
					<input id="effectif-conference" type="number" class="validate"
						min="0" max="500"> <label for="effectif-conference">Effectif</label>
				</div>
				</p>
				<p>
				<div class="input-field col s6">
					<input name="disposition" type="radio" id="disposition-vide" /> <label
						for="disposition-vide">Disposition Vide</label>
				</div>
				<div class="input-field col s3">
					<input id="effectif-vide" type="number" class="validate" min="0"
						max="500"> <label for="effectif-vide">Effectif</label>
				</div>
		</div>
		</p>
		</form>
		<h5>Caractéristiques</h5>
		<form action="#">
			<div class="row">
				<div class="col s12 m4 l4">
					<p>
						<input type="checkbox" id="disponibilite-salle" /> <label
							for="disponibilite-salle">Disponibilité</label>
					</p>
				</div>
				<div class="col s12 m4 l4">
					<p>
						<input type="checkbox" id="lumiere-salle" /> <label
							for="lumiere-salle"><i class="material-icons">wb_sunny</i>Lumière
							du jour</label>
					</p>
				</div>
				<div class="col s12 m4 l4">
					<p>

						<input type="checkbox" id="handicap-salle" /> <label
							for="handicap-salle"><i class="material-icons">accessible</i>Accès
							handicapé</label>
					</p>
				</div>
			</div>
		</form>
		<div class="submit col s12 center-align">
			<button class="btn waves-effect waves-light" type="submit"
				name="action">Valider</button>
		</div>
	</div>
	</div>
	</div>
</section>
{% endblock %} {# Contenu du block javascript #} {% block javascript %}
{# (Contenu optionnel) ici doit être ajouté seulement des balisespour
faire appel à des fichiers js spécifiques à la vue #}
