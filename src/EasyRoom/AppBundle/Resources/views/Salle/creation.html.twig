{% extends "EasyRoomAppBundle::template_parent.html.twig" %} {# Contenu
du block stylesheets #} {% block stylesheets %} {# (Contenu optionnel)
ici doit être ajouté seulement des balises
<link>
pour faire appel à des fichiers css spécifiques à la vue #}
<link type="text/css" rel="stylesheet"
	href="{{ asset('bundles/easyroomapp/css/Salle/salle_style.css') }}" />
{% endblock %} {# Contenu du block navbar_profil #} {% block
