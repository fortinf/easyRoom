{% extends "EasyRoomAppBundle::template_parent.html.twig" %}

{# Contenu du block stylesheets #}
{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/easyroomapp/dist/css/accueil.css') }}"/>
{% endblock %}

{# Contenu du block navbar_profil #}
{% block navbar_profil %}
    <ul id="dropdown1" class="dropdown-content">
        <li>
            <a href="#!" class="blue-text text-lighten-1">Mon compte</a>
        </li>
        <li class="divider blue-text text-lighten-1"></li>
        <li>
            <a href="#!" class="blue-text text-lighten-1">Déconnexion</a>
        </li>
    </ul>
{% endblock %}

{# Contenu du block navbar #}
{% block navbar %}
    <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li>
            <a href="#" class="blue-text text-lighten-1">Accueil</a>
        </li>
        <li>
            <a href="#" class="blue-text text-lighten-1">Salles</a>
        </li>
        <li>
            <a href="#" class="blue-text text-lighten-1">Mes réservations</a>
        </li>
        <li>
            <a class="dropdown-button blue-text text-lighten-1" href="#!" data-activates="dropdown1">Compte<i class="material-icons right">perm_identity</i>
            </a>
        </li>
    </ul>
{% endblock %}

{# Contenu du block navbar #}
{% block main %}
    <section id="salle-section-recherche" class="valign-wrapper">
        <div class="valign blue lighten-1 container" id="salle-div-recherche">
            <div class="row">
                <div class="col s12"><h4>Réserver une salle</h4></div>
                <div class="input-field col s2">
                    <input id="nom-salle" type="text" class="validate">
                    <label for="nom-salle">Nom salle</label>
                </div>
                <div class="input-field col s2">
                    <input id="effectif-salle" type="number" class="validate">
                    <label for="effectif-salle">Effectif</label>
                </div>
                <div class="input-field col s2">
                    <input id="date-debut-salle" type="date" class="datepicker">
                    <label for="date-debut-salle">Début</label>
                </div>
                <div class="input-field col s2">
                    <input id="duree-salle" type="number" class="validate">
                    <label for="duree-salle">Durée</label>
                </div>
                <div class="col s4">
                    <a class="waves-effect waves-light btn">
                        <i class="material-icons left">search</i>Rechercher</a>
                </div>
                <div class="input-field col s12">
                    <select>
                        <option value="" disabled selected>Choose your option</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                    </select>
                    <label>Materialize Select</label>
                </div>
            </div>
        </div>
    </section>
    <section>
      <div class="row">
      {% include 'EasyRoomAppBundle:Reservation:carte.html.twig' %}
      </div>
    </section>
    <section>

    </section>
{% endblock %}

{# Contenu du block navbar #}
{% block javascript %}{% endblock %}
